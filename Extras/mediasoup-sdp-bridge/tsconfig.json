{
  "extends": "@tsconfig/node16/tsconfig.json",

  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./lib",
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["./src"]
}
